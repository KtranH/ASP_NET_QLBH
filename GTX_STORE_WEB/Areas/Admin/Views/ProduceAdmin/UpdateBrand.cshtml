@model GTX_STORE_WEB.Models.HANGSX
@{
    ViewBag.Title = "UpdateBrand";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage1.cshtml";
}

<main id="main" class="main">
    <div class="pagetitle">
        <h1>Chỉnh sửa nhà sản xuất</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","HomeAdmin")">Home</a></li>
                <li class="breadcrumb-item active">Chỉnh sửa nhà sản xuất</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section dashboard" style="background-color: white; padding: 20px; border-radius: 20px; box-shadow: 0 10px 10px rgba(0, 0, 0, 0.1); margin-bottom: 20px;">
        @using (Html.BeginForm("UpdateBrand", "ProduceAdmin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MANSX)

                <div class="form-floating mb-3">
                    @Html.TextBoxFor(model => model.TENNSX, new { @class = "form-control", @id = "floatingInputName", placeholder = "Tên nhà sản xuất", @required = "required" })
                    @Html.Label("Tên nhà sản xuất", new { @class = "form-label" })
                    @Html.ValidationMessageFor(model => model.TENNSX, "Vui lòng nhập tên nhà sản xuất", new { @class = "invalid-feedback" })
                </div>

                <div class="form-floating mb-3">
                    @Html.TextBoxFor(model => model.QUOCGIA, new { @class = "form-control", @id = "floatingInputName", placeholder = "Tên quốc gia", @required = "required" })
                    @Html.Label("Quốc gia", new { @class = "form-label" })
                    @Html.ValidationMessageFor(model => model.QUOCGIA, "Vui lòng quốc gia của nhà sản xuất đó", new { @class = "invalid-feedback" })
                </div>

                <div class="d-grid gap-2 col-6 mx-auto">
                    <button class="btn btn-primary" type="submit">Lưu và thay đổi</button>

                </div>
            </div>
        }
        <a href="@Url.Action("Index","HomeAdmin")" style="text-decoration:none;font-size:15px;color:black;margin-left:20px;">
            <i class="fa-solid fa-backward"></i>  Quay Lại
        </a>
    </section>
</main>

